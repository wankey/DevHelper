<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <ImageView
      android:id="@+id/iv_tools"
      android:layout_width="72dp"
      android:layout_height="72dp"
      android:contentDescription="@string/developer_panel"
      android:src="@drawable/ic_tools"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/tv_subhead"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/developer_panel"
      android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/iv_tools"
      />

  <TextView
      android:id="@+id/tv_app_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Headline"
      app:layout_constraintBottom_toTopOf="@id/tv_subhead"
      app:layout_constraintEnd_toStartOf="@id/iv_tools"
      tools:text="Mithril"
      />

</androidx.constraintlayout.widget.ConstraintLayout>